<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1cadb"
    tools:context=".MainActivity">


    <!-- TEXT -->
    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="Upcoming Reminders"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- BASE - BUTTON DISPLAY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!-- BUTTONS DISPLAY TOP -->
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="23dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- BUTTON CALENDAR -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnCalendar"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_a"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calendar"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <!-- BUTTON CREATE REMINDER -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnCreateRem"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_b"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create\nReminder"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <!-- BUTTON MAP -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnMap"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_c"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- BUTTONS DISPLAY BOTTOM -->
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="23dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- BUTTON NOTES -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnNotes"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_d"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <!-- BUTTON SELF-HELP -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnHelp"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_e"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self-Help"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <!-- BUTTON EXTRA IN DEV -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>





        <!-- BUTTON MAP -->

        <!-- BUTTON NOTES -->

        <!-- BUTTON SELF-HELP -->



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>